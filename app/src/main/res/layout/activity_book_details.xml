<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.details.BookDetailsActivity"
    android:background="#1e130c"

    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#3B0102" />


    <TextView
        android:layout_marginTop="8dp"
        android:textColor= "#FFFCE6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/book_details_title_label"
        android:textSize="20sp"
        />

    <TextView
        android:textColor= "#FFFCE6"

        android:id="@+id/book_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        tools:text="titulo" />

    <TextView
        android:textColor= "#FFFCE6"

        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/book_details_description_label"
        android:textSize="20sp" />

    <TextView
        android:textColor= "#FFFCE6"

        android:id="@+id/book_details_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        tools:text="descrição" />


</LinearLayout>